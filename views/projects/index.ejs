<!DOCTYPE html>
<html>
<head>

    <% include ../head.ejs %>

</head>
<body>

    <% include ../nav.ejs %>

    <div id="portfolio-section-1" class="text-align-center">

      <h1>My <%= title %></h1>
      <p class="italic">- Featured Projects -</p>

      <div class="container container-first">
        <div class="grid">

      <% for(var i=0;i<projects.length;i++) { %>

          <a href="/projects/<%= projects[i]._id %>">
            <div class="grid-item block-ghost" style="background: url('/assets/images/<%= projects[i].coverImage.fileName %>'); -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">

              <div class="centered-ghost">
                <h3><%= projects[i].title %></h3>
                <p><%= projects[i].author %></p>
                <p class="italic"><%= moment(projects[i].date).format('LL') %></p>
              </div>


            </div>
          </a>

    <% } %>

          </div>
        </div><!-- CLOSING DIV OF CONTAINER -->
      </div>

    <% include ../footer.ejs %>
